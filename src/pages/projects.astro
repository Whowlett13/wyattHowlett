---
import BaseLayout from "../layouts/BaseLayout.astro";
import Link from "../components/ui/link.astro";
import Icon from "../components/ui/Icon.astro";
import Hero from "../components/Hero.astro";
import RepoCard from "../components/RepoCard.astro";

type PinnedRepos = {
  owner: string;
  repo: string;
  link: string;
  description: string;
  image: string;
  language: string;
  languageColor: string;
  stars: number;
  forks: number;
};

const pinnedRepos = await fetch(
  "https://gh-pinned-repos-tsj7ta5xfhep.deno.dev/?username=whowlett13"
);
const repos = await pinnedRepos.json();
---

<BaseLayout
  title="Projects | Stefan Gogov"
  description="Learn about Stefan Gogov's most recent projects"
>
  <div class="stack gap-20">
    <header class="wrapper hero">
      <Hero
        align="center"
        title="My projects"
        tagline="Showcase of my most recent projects"
      />
      <img
        alt="illustration of a men coding web projects"
        src="/assets/HowltechSolutions.jpg"
      />
    </header>

    <main class="wrapper stack gap-10">
      <div class="repos">
        {repos.map((repo: PinnedRepos) => <RepoCard {...repo} />)}
      </div>

      <div class="links">
        <Link
          class="link"
          href="https://github.com/stekatag"
          style="rounded"
          external
        >
          <Icon icon="code" size="1.33em" /> See All Projects
        </Link>
        <Link class="link" href="/contact" style="roundedInverted">
          <Icon icon="readCV" size="1.33em" /> See Resume
        </Link>
      </div>
    </main>
  </div>
</BaseLayout>

<style lang="scss">
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-inline: 2.5rem;
    gap: 1.5rem;

    img {
      width: 100%;
      max-width: 22rem;
    }
  }

  .repos {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    .link {
      width: 100%;
      justify-content: center;
    }
  }

  @media (min-width: 50em) {
    .hero {
      flex-direction: row;
      gap: 6rem;
    }

    .repos {
      grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
    }

    .links {
      margin-top: 0.5rem;
      flex-direction: row;
      justify-content: center;
      gap: 0.8rem;

      .link {
        width: auto;
      }
    }
  }
</style>
